<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tinyandfriend.project.friendstrip.AddTagFragment">

    <LinearLayout
        android:background="@color/whiteLow"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:textColor="@color/white"
                android:text="ภูมิภาค"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"/>

            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:text="ประเภทการท่องเที่ยว"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />

            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="ประเภทสถานที่ท่องเที่ยว"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/tag_region"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.1"/>

            <ListView
                android:id="@+id/tag_trip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ListView
                android:id="@+id/tag_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.15"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เพิ่มเอกสาร" />

        <android.support.v7.widget.RecyclerView
            android:background="#ECECEC"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</LinearLayout>
