<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="PLACE NAME"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/title_header"
            android:layout_toEndOf="@+id/title_header"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:id="@+id/snippet"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title" />

        <TextView
            android:text="TRIP DAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_day"
            android:layout_below="@+id/snippet"
            android:layout_alignRight="@+id/snippet"
            android:layout_alignEnd="@+id/snippet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_header"
            android:text="ชื่อสถานที"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/snippet_header"
            android:layout_alignStart="@+id/snippet_header" />

        <TextView
            android:id="@+id/trip_day_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เที่ยววันที่"
            android:layout_below="@+id/snippet_header"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/snippet_header"
            android:text="ที่ตั้ง"
            android:layout_below="@+id/title_header"
            android:layout_alignLeft="@+id/trip_day_header"
            android:layout_alignStart="@+id/trip_day_header" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_gravity="end"
        android:gravity="center"/>
</LinearLayout>