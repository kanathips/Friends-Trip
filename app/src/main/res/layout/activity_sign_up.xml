<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="สมัครสมาชิก"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/whiteLow"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_name"
                    android:layout_gravity="center_horizontal"
                    android:hint="ชื่อจริง"
                    android:singleLine="true"
                    android:textColorHint="@color/whiteLow"
                    android:textColorHighlight="@color/colorPrimary"
                    android:layout_weight="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/whiteLow"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_name"
                    android:layout_gravity="center_horizontal"
                    android:hint="นามสกุล"
                    android:singleLine="true"
                    android:textColorHint="@color/whiteLow"
                    android:layout_weight="1" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email"
                android:hint="อีเมลล์"
                android:textColorHint="@color/whiteLow"
                android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            app:passwordToggleEnabled="false"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:hint="รหัสผ่าน"
                android:textColorHint="@color/whiteLow"
                android:layout_gravity="center_horizontal"
                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            app:passwordToggleEnabled="false"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/repassword"
                android:layout_gravity="center_horizontal"
                android:hint="ยืนยันรหัสผ่าน"
                android:textColorHint="@color/whiteLow"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/displayname"
                android:layout_gravity="center_horizontal"
                android:hint="ชื่อที่ใช้ในระบบ"
                android:textColorHint="@color/whiteLow"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="วันเกิด"
                android:textSize="18dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/birth_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:hint="DD / MM / YYYY"
                android:textColorHint="@color/whiteLow"
                android:textSize="15dp"
                android:enabled="false"
                android:gravity="center"/>

            <ImageButton
                android:scaleType="centerInside"
                android:id="@+id/alert_dialog_date_picker"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/editText"
                android:layout_toRightOf="@+id/editText"
                android:onClick="onClickDate"
                android:src="@drawable/calendar" />



        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phonenumber"
                android:layout_gravity="center_horizontal"
                android:hint="เบอร์โทรศัพท์"
                android:textColorHint="@color/whiteLow"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteLow"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/citizen_id"
                android:layout_gravity="center_horizontal"
                android:hint="รหัสประจำตัวประชาชน"
                android:textColorHint="@color/whiteLow"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:id="@+id/cancel_bt"
            android:textColor="@color/white"
            android:background="@color/darkLow"
            android:onClick="onClickSignUp_Cancel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ยืนยัน"
            android:id="@+id/button"
            android:textColor="@color/white"
            android:background="@color/colorRed"
            android:onClick="onClickSignUp" />
    </LinearLayout>

</LinearLayout>