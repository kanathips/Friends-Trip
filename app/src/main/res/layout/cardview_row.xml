<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">


            <TextView
                android:id="@+id/name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="TRIP_NAME"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/trip_end_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:gravity="bottom"
                android:text="ถึง"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/trip_start"
                android:layout_alignBottom="@+id/trip_start"
                android:layout_toRightOf="@+id/trip_start"
                android:layout_toEndOf="@+id/trip_start" />

            <TextView
                android:id="@+id/trip_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRIP_END"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/trip_end_header"
                android:layout_alignBottom="@+id/trip_end_header"
                android:layout_toRightOf="@+id/trip_end_header"
                android:layout_toEndOf="@+id/trip_end_header"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

            <View
                style="@style/Divider"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/name_card"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/view" />

            <TextView
                android:id="@+id/trip_start_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="ระยะเวลา"
                android:textSize="14sp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/view"
                android:layout_alignLeft="@+id/name_card"
                android:layout_alignStart="@+id/name_card" />

            <TextView
                android:id="@+id/count_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textSize="15sp"
                android:layout_alignBaseline="@+id/name_card"
                android:layout_alignBottom="@+id/name_card"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/trip_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:text="TRIP_START"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/trip_start_header"
                android:layout_alignBottom="@+id/trip_start_header"
                android:layout_toRightOf="@+id/trip_start_header"
                android:layout_toEndOf="@+id/trip_start_header" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>