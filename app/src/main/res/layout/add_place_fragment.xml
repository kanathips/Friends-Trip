<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <EditText
        android:id="@+id/trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="ชื่อห้อง" />

    <EditText
        android:id="@+id/trip_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="วันเริ่มทริป" />

    <EditText
        android:id="@+id/trip_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="วันจบทริป" />

    <EditText
        android:id="@+id/number_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="จำนวนผู้เข้ารวม"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/expend"
        android:hint="ค่าใช้จ่ายโดยประมาณ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="รายละเอียดทริป"
        android:textAppearance="?android:textAppearanceMedium" />

    <EditText
        android:id="@+id/trip_spoil"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start|top"
        android:maxLength="512" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        map:mapType="hybrid"
        map:uiZoomControls="false"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="เพิ่มสถานที่"
            android:paddingEnd="4dp"
            android:id="@+id/editMap"
            android:paddingRight="4dp" />
    </fragment>
</LinearLayout>